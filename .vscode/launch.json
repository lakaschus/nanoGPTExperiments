{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        // Prepare dataset
        {
            "name": "Prepare dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/data/prepare.py",
            "console": "integratedTerminal",
            "args": [
                "--dataset_id",
                "stas/openwebtext-10k"
            ],
        },
        // Run train.py with arguments
        {
            "name": "Azure Training Job Debugging",
            // Set src directory as the current working directory
            "cwd": "${workspaceFolder}/src",
            "type": "debugpy",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": [
                "--batch_size=2",
                "--compile=False",
                "--device=cpu",
                "--gradient_accumulation_steps=2",
                "--n_layer=3",
                "--n_head=4",
                "--n_embd=64",
                "--block_size=64",
                "--dataset=shakespeare_char",
                "--eval_interval=50",
                "--max_iters=100",
            ],
        },
        {
            "name": "Debug locally with GPU",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/train.py",
            "console": "integratedTerminal",
            "args": [
                "--batch_size",
                "32",
                "--device",
                "cuda",
                "--gradient_accumulation_steps",
                "4",
                "--n_layer",
                "6",
                "--n_head",
                "8",
                "--n_embd",
                "128",
                "--block_size",
                "128",
                "--eval_interval",
                "25",
                "--max_iters",
                "5000",
            ]
        },
        // python sample.py --out_dir=outputs
        {
            "name": "Sample from trained model",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/src",
            "program": "sample.py",
            "console": "integratedTerminal",
            "args": [
                "--out_dir",
                "../outputs"
            ],
        },
        {
            "name": "Test Pipeline",
            // Set src directory as the current working directory
            "cwd": "${workspaceFolder}/src",
            "type": "debugpy",
            "request": "launch",
            "program": "pipeline.py",
            "console": "integratedTerminal",
            "args": [
                "--config_file=./configs/debugging_config.json",
            ],
        },
    ]
}