    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        // Prepare dataset
        {
            "name": "Prepare Shakespeare dataset",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/data/shakespeare_char/prepare.py",
            "console": "integratedTerminal"
        },
        // Run train.py with arguments
        {
            "name": "Azure Training Job Debugging",
            // Set src directory as the current working directory
            "cwd": "${workspaceFolder}/src",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "console": "integratedTerminal",
            "args": [
                "--batch_size=2",
                "--compile=False",
                "--device=cpu",
                "--gradient_accumulation_steps=2",
                "--n_layer=3",
                "--n_head=4",
                "--n_embd=64",
                "--block_size=64",
                "--dataset=shakespeare_char",
                "--eval_interval=50",
                "--max_iters=100",
            ],
        },
        {
            "name": "Train with GPU",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/train.py",
            "console": "integratedTerminal",
            "args": [
                "--batch_size=32",
                "--compile=False",
                "--device=gpu"
            ],
        },
        // python sample.py --out_dir=outputs
        {
            "name": "Sample from trained model",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src",
            "program": "sample.py",
            "console": "integratedTerminal",
            "args": [
                "--out_dir=outputs"
            ],
        },
        {
            "name": "Test Pipeline",
            // Set src directory as the current working directory
            "cwd": "${workspaceFolder}/src",
            "type": "python",
            "request": "launch",
            "program": "pipeline.py",
            "console": "integratedTerminal",
            "args": [
                "--config_file=./configs/debugging_config.json",
            ],
        },
        {
            "name": "Local Pipeline",
            // Set src directory as the current working directory
            "cwd": "${workspaceFolder}/src",
            "type": "python",
            "request": "launch",
            "program": "pipeline.py",
            "console": "integratedTerminal",
            "args": [
                "--config_file=./configs/local_config.json",
            ],
        },
    ]
}